<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Store.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-secondary bg-gradient">
            <a class="navbar-brand mx-4" asp-area="" asp-controller="Home" asp-action="Index">Book Store</a>
            <form class="row" action="@Url.Action("Index", "Search")" method="get">
                <div class="col">
                    <input class="form-control" type="search" name="query" placeholder="title or author" />
                </div>
                <div class="col" style="margin-left: 4px">
                    <button class="btn btn-primary" type="submit">Search</button>
                </div>
            </form>
        </nav>   
    </header>
    <div class="container">
        <main style="margin-top: 20px">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
